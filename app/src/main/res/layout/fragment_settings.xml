<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Settings.SettingsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight" >

    <TableLayout
        android:id="@+id/svTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <!--first row-->

        <!--Second row-->
        <TableRow
            android:id="@+id/tlInfoUserRow"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/iurCardView"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_margin="4dp"
                android:layout_weight="0.8"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                android:background="@color/colorPrimaryLight" >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/iucvConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/etStrada"
                        android:layout_width="250dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_border"
                        android:ems="10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.764"
                        android:inputType="text"
                        android:textSize="24sp"
                        android:text="@string/SETetStrada"/>

                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="250dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_border"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.614"
                        android:textSize="24sp"
                        android:text="@string/SETetCity"/>

                    <EditText
                        android:id="@+id/etJudet"
                        android:layout_width="250dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_border"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.464"
                        android:textSize="24sp"
                        android:text="@string/SETetJudet" />

                    <EditText
                        android:id="@+id/etTelefon"
                        android:layout_width="250dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_border"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.315"
                        android:textSize="24sp"
                        android:text="@string/SETetTelefon"/>

                    <EditText
                        android:id="@+id/etPrenume"
                        android:layout_width="250dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_border"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.166"
                        android:textSize="24sp"
                        android:text="@string/SETetPrenume"/>

                    <EditText
                        android:id="@+id/etNume"
                        android:layout_width="250dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_border"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.246"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.039"
                        android:textSize="24sp"
                        android:text="@string/SETetNume" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tlUserInfoEditCardView"
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_margin="4dp"
                android:layout_weight="0.2"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="40dp"
                android:background="@drawable/white_subtle_border" >


                <LinearLayout
                    android:id="@+id/uiecvLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_nume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/edit_black"
                        android:contentDescription="@string/SETimageView_nume" />

                    <ImageView
                        android:id="@+id/imageView_prenume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/edit_black"
                        android:contentDescription="@string/SETimageView_prenume"/>

                    <ImageView
                        android:id="@+id/imageView_telefon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/edit_black"
                        android:contentDescription="@string/SETimageView_telefon" />

                    <ImageView
                        android:id="@+id/imageView_judet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/edit_black"
                        android:contentDescription="@string/SETimageView_judet" />

                    <ImageView
                        android:id="@+id/imageView_oras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/edit_black"
                        android:contentDescription="@string/SETimageView_oras" />

                    <ImageView
                        android:id="@+id/imageView_strada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/edit_black"
                        android:contentDescription="@string/SETimageView_strada" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </TableRow>

        <TableRow
            android:id="@+id/tlRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/trLangCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/white_subtle_border"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                app:cardCornerRadius="20dp">

                <TableLayout
                    android:id="@+id/lcvLanguageTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_subtle_border">

                    <TableRow
                        android:id="@+id/itlRomanianRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_subtle_border"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/rImageView"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.8"
                            android:textColor="@android:color/black"
                            android:src="@drawable/ro"
                            android:contentDescription="@string/SETrImageView"/>

                        <CheckBox
                            android:id="@+id/rCheckbox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.2"
                            android:background="@color/colorBackground"
                            android:checked="true"
                            android:textColor="@color/colorTextPrimary" />

                    </TableRow>


                    <TableRow
                        android:id="@+id/itlEnglishRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_subtle_border"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/eImageView"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.8"
                            android:src="@drawable/br"
                            android:textColor="@android:color/black"
                            android:contentDescription="@string/SETeImageView"/>

                        <CheckBox
                            android:id="@+id/eCheckbox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.2"
                            android:background="@color/colorBackground"
                            android:checked="false"
                            android:textColor="@android:color/white" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/hImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/white_subtle_border"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/textView_hun"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.8"
                            android:src="@drawable/hu"
                            android:textColor="@android:color/black"
                            android:contentDescription="@string/SEThImageView"/>

                        <CheckBox
                            android:id="@+id/hCheckbox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.2"
                            android:background="@color/colorBackground"
                            android:checked="false"
                            android:textColor="@android:color/white" />

                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/trAlteCardView"
                android:layout_width="0dp"
                android:layout_height="230dp"
                android:layout_margin="4dp"
                android:layout_weight="0.5"
                app:cardCornerRadius="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/acvConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/SETresetpasswordButton"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:padding="2dp"
                        android:text="@string/SETresetpasswordButton"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.982" />

                    <Button
                        android:id="@+id/SETlogoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:text="@string/SETlogoutButton"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </TableRow>

        <TableRow
            android:id="@+id/tlBottomRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/brBottomCardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                app:layout_constraintTop_toBottomOf="@+id/cv1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bcvConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </TableRow>

    </TableLayout>

</ScrollView>